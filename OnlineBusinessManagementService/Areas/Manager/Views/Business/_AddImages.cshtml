
<section class="modal-content pb-3">
    <section class="text-center modal-title position-relative h3 py-2 section-title mb-3">
        Add Images
        <a class="text-white position-absolute end-0 text-decoration-none me-4" href="#" data-bs-dismiss="modal">&times</a>
    </section>
    <section>
        <div class="d-flex justify-content-center align-items-center">
            <div class="col-md-10">
                <form asp-action="AddImages" asp-controller="Business" asp-area="Manager" method="post" enctype="multipart/form-data">
                    <input name="directory" type="hidden" value="@ViewBag.Directory" />
                    <div class="form-floating mb-3">
                        <input disabled class="form-control imagespath-file-input" placeholder="Images" />
                        <label>Images</label>
                    </div>
                    <div class="form-group mb-3">
                        <input type="file" name="files" hidden class="images-file-input" id="images-file" multiple>
                        <label class="btn btn-file form-control" for="images-file">Choose Images</label>
                    </div>
                    <div class="form-group mb-3 text-center align-middle">
                        <input type="submit" value="Add Images" class="form-control btn btn-edit" />
                    </div>
                </form>
            </div>
        </div>
    </section>
</section>

<script src="~/js/site.js" asp-append-version="true"></script>
