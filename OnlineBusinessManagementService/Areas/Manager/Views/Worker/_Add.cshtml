<section class="modal-content pb-3">
    <section class="text-center modal-title position-relative h3 py-2 section-title mb-3">
        Add Worker
        <a class="text-white position-absolute end-0 text-decoration-none me-4" href="#" data-bs-dismiss="modal">&times</a>
    </section>
    <section>
        <div class="d-flex justify-content-center align-items-center">
            <div class="col-md-10">
                <form asp-action="Add" asp-controller="Worker" asp-area="Manager" method="post">
                    <input type="hidden" name="businessId" value="@ViewBag.BusinessId" />
                    <div class="form-floating mb-3">
                        <input name="email" class="form-control" placeholder="Email" autocomplete="off" aria-required="true" />
                        <label>Email</label>
                    </div>
                    <div class="form-group mb-3 d-flex justify-content-evenly">
                        <input type="submit" value="Add Worker" class="btn btn-create col-md-4" />
                        <a class="btn btn-cancel col-md-4" href="#" data-bs-dismiss="modal">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </section>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
