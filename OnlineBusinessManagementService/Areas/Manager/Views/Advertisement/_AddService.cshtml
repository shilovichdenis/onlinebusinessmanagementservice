@model List<Service>
@{
    var selectList = new SelectList(Model, "Id", "Name");
}
<section class="modal-content pb-3">
    <section class="text-center modal-title position-relative h3 py-2 section-title mb-3">
        Add Service
        <a class="text-white position-absolute end-0 text-decoration-none me-4" href="#" data-bs-dismiss="modal">&times</a>
    </section>
    <section>
        <div class="d-flex justify-content-center align-items-center flex-column">
            <div class="col-md-10">
                <form asp-action="AddService" asp-controller="Advertisement" asp-area="Manager" method="post">
                    <input type="hidden" name="advertisementId" class="form-control" value="@ViewBag.AdvertisementId" />
                    <div class="form-floating mb-3">
                        <select name="serviceId" class="form-control" asp-items="@selectList"></select>
                        <label>Name</label>
                    </div>
                    <div class="form-group mb-3 d-flex justify-content-evenly">
                        <input type="submit" value="Add Service" class="btn btn-create col-md-4" />
                        <a class="btn btn-cancel col-md-4" href="#" data-bs-dismiss="modal">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </section>
</section>

<script src="~/js/site.js" asp-append-version="true"></script>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
